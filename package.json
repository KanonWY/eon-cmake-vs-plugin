{
  "name": "vscode-plugin-demo",
  "displayName": "vscode-plugin-demo",
  "description": "VSCode插件 demo",
  "publisher": "kanon",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:cmake"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "cmake",
        "extensions": [
          ".cmake"
        ],
        "filenames": [
          "CMakeLists.txt"
        ],
        "aliases": [
          "CMake"
        ]
      }
    ],
    "grammars": [
      {
        "language": "cmake",
        "scopeName": "source.cmake",
        "path": "./syntaxes/CMake.tmLanguage"
      }
    ],
    "configuration": [
      {
        "title": "CMake configuration",
        "properties": {
          "cmake.eoncmakePath": {
            "type": "string",
            "default": "cmake",
            "description": "The path to CMake generator executable"
          }
        }
      }
    ],
    "commands": [
      {
        "command": "extension.sayHello",
        "title": "EON HELLO"
      },
      {
        "command": "extension.demo.getCurrentFilePath",
        "title": "Eon Get Cur path"
      },
      {
        "command": "extension.demo.testEditorCommand",
        "title": "TEST editor"
      },
      {
        "command": "extension.demo.testMenuShow",
        "title": "该菜单仅在 cmake 中出现"
      }
    ],
    "keybindings": [
      {
        "command": "extension.sayHello",
        "key": "ctrl+f10",
        "mac": "cmd+f10",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorFocus",
          "command": "extension.sayHello",
          "group": "navigation@2"
        },
        {
          "when": "editorFocus && resourceLangId == cmake",
          "command": "extension.demo.getCurrentFilePath",
          "group": "navigation@1"
        },
        {
          "when": "editorFocus && resourceLangId == cmake",
          "command": "extension.demo.testMenuShow",
          "group": "z_commands"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceLangId == cmake",
          "command": "extension.demo.getCurrentFilePath",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "when": "editorFocus && resourceLangId == cmake",
          "command": "extension.demo.testMenuShow",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8"
  }
}